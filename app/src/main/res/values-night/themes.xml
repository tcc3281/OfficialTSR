<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TSR" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorSurface">#252525</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>
    
    <!-- Button styles for dark theme -->
    <style name="Widget.TSR.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:elevation">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/primary_light</item>
    </style>
    
    <style name="Widget.TSR.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_light</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.TSR.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_light</item>
        <item name="rippleColor">@color/primary</item>
    </style>
    
    <!-- Card style for dark theme -->
    <style name="Widget.TSR.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">#252525</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>